<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.fragments.fragment.HomeFragment">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floating_add_book"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="start|bottom"
        android:layout_margin="15dp"
        android:contentDescription="Floating Button"
        app:shapeAppearanceOverlay="@style/fab_3_rounded"
        app:backgroundTint="@color/anemi"
        app:srcCompat="@drawable/baseline_add_24_white"
        app:tint="@color/white"
        app:rippleColor="#E91E63" />

    <!--    android:background="@android:color/transparent"-->

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerBookView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:listitem="@layout/book_list" />

</RelativeLayout>
